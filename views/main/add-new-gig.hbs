<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="overview">
        <h2 class="text-center">Enter your gig details</h2>
        <br />
        <div class="new-gig-card">
          <form method="post">
            <div class="form-group">
              <label>Gig title</label>
              <input type="text" class="form-control" placeholder="I will do something" name="gig_title">
            </div>

            <div class="form-group">
              <label>Gig price</label>
              <input type="text" class="form-control" placeholder="$10" name="gig_price">
            </div>

            <div class="form-group">
              <label>Gig category</label>
              <select class="form-control cust" name="gig_category">
                <option selected value="0">Select category:</option>
                <option value="1">Programming</option>
                <option value="2">Website</option>
                <option value="3">Design</option>
                <option value="4">Marketing</option>
                <option value="5">Content Writting</option>
              </select>
            </div>

            <div class="form-group input-group-lg">
              <label>Gig about</label>
              <input type="text" class="form-control" placeholder="Describe your gig" name="gig_about">
            </div>

            <button type="submit" class="btn btn-success btn-lg">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
